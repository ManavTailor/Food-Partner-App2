generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int          @id @default(autoincrement())
  email     String       @unique
  password  String
  name      String?
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  Restaurnt Restaurant[]
  Menu      Menu[]
  Order     Order[]
}

model Restaurant {
  id     Int    @id @default(autoincrement())
  bio    String
  name   String
  rating Float
  user   User   @relation(fields: [userId], references: [id])
  userId Int    @unique
  Menu   Menu[]
}

model Menu {
  id             Int        @id @default(autoincrement())
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
  title          String
  isNotAvailable Boolean    @default(false)
  baker          Restaurant @relation(fields: [restaurantId], references: [id])
  restaurantId   Int
  categories     Category[]
  User           User?      @relation(fields: [userId], references: [id])
  userId         Int?
  Order          Order[]
}

model Order {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  menu      Menu     @relation(fields: [menuId], references: [id])
  menuId    Int
  quantity  Int
  status    String
}

model Category {
  id    Int    @id @default(autoincrement())
  name  String
  Menus Menu[]
}

enum Role {
  USER
  ADMIN
}
